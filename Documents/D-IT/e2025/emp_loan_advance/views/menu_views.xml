<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu -->
    <menuitem id="menu_hr_loan_root"
              name="Loans"
              web_icon="emp_loan_advance,static/description/icon.png"
              groups="hr.group_hr_user,emp_loan_advance.group_loan_user"
              sequence="100"/>

    <!-- Loan Requests Action -->
    <record id="action_hr_loan" model="ir.actions.act_window">
        <field name="name">Loan Requests</field>
        <field name="res_model">hr.loan</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_loans': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first loan request!
            </p>
        </field>
    </record>

    <!-- Loan Requests Menu -->
    <menuitem id="menu_hr_loan"
              name="Loan Requests"
              parent="menu_hr_loan_root"
              action="action_hr_loan"
              sequence="1"/>

    <!-- Loan Types Action -->
    <record id="action_hr_loan_type" model="ir.actions.act_window">
        <field name="name">Loan Types</field>
        <field name="res_model">hr.loan.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Configuration Menu -->
    <menuitem id="menu_hr_loan_configuration"
              name="Configuration"
              parent="menu_hr_loan_root"
              groups="hr.group_hr_manager,emp_loan_advance.group_loan_manager"
              sequence="100"/>

    <!-- Loan Types Menu -->
    <menuitem id="menu_hr_loan_type"
              name="Loan Types"
              parent="menu_hr_loan_configuration"
              action="action_hr_loan_type"
              sequence="1"/>
</odoo>