<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="vehicle_repair_res_user_form_inherit" model="ir.ui.view">
            <field name="name">vehicle.repair.res.user.form.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="before">
                    <group>
                        <group>
                            <field name="inspection_team_ids" widget="many2many_tags" readonly="1" force_save="1"/>
                            <label for="is_technician" class="mt-1"/>
                            <div name="is_technician">
                                <field name="is_technician" class="oe_inline"/>
                                <br/>
                                <button string="Create employee" type="object" name="action_create_employee"
                                        invisible="not id or employee_id or not is_technician"/>
                            </div>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>