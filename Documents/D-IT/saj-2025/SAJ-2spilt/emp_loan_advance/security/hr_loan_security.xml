<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="module_category_hr_loan" model="ir.module.category">
        <field name="name">Employee Loans</field>
        <field name="description">User access level for employee loans</field>
        <field name="sequence">17</field>
    </record>

    <record id="group_loan_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_hr_loan"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_loan_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_hr_loan"/>
        <field name="implied_ids" eval="[(4, ref('group_loan_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Record Rules -->
    <data noupdate="1">
        <!-- Loan Type Rules -->
        <record id="rule_loan_type_manager" model="ir.rule">
            <field name="name">Loan Type: Manager Access</field>
            <field name="model_id" ref="model_hr_loan_type"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_loan_manager'))]"/>
        </record>

        <!-- Loan Rules -->
        <record id="rule_loan_user_own" model="ir.rule">
            <field name="name">User: View Own Loans</field>
            <field name="model_id" ref="model_hr_loan"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_loan_user'))]"/>
        </record>

        <record id="rule_loan_manager" model="ir.rule">
            <field name="name">Manager: All Loans</field>
            <field name="model_id" ref="model_hr_loan"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_loan_manager'))]"/>
        </record>

        <!-- Department Manager Rule -->
        <record id="rule_loan_department_manager" model="ir.rule">
            <field name="name">Department Manager: Department Loans</field>
            <field name="model_id" ref="model_hr_loan"/>
            <field name="domain_force">['|', ('department_id.manager_id.user_id', '=', user.id), ('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
        </record>
    </data>
</odoo>