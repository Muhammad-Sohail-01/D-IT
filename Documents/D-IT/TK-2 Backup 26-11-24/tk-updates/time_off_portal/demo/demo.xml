<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Create a new Leave Type -->
        <record model="hr.leave.type" id="custom_leave_type">
            <field name="name">Paid Time Off</field>
            <!-- Add more fields as needed -->
        </record>

        <!-- Demo Data for Employee -->
        <record model="hr.employee" id="demo_employee">
            <field name="name">John Doe</field>
            <field name="work_email">john.doe@example.com</field>
            <!-- Add more fields as needed -->
        </record>

        <!-- Demo Data for Portal User -->
        <record model="res.users" id="demo_portal_user">
            <field name="name">John Doe</field>
            <field name="login">john.doe@example.com</field>
            <field name="email">john.doe@example.com</field>
            <field name="password">demo</field> 
            <field name="employee" eval="True"/> <!-- Set as an Employee -->
            <field name="employee_id" ref="demo_employee"/> <!-- Link to the Employee -->
            <!-- Add more fields as needed -->
        </record>

        <!-- Link Portal User to Employee -->
        <record model="hr.employee" id="demo_employee">
            <field name="user_id" ref="demo_portal_user"/>
        </record>

        <!-- Demo Data for Time Off Request -->
        <record model="hr.leave" id="demo_time_off_request">
            <field name="holiday_status_id" ref="custom_leave_type"/>
            <field name="user_id" ref="demo_portal_user"/>
            <field name="employee_id" ref="demo_employee"/>
            <!-- Add more fields as needed -->
        </record>
    </data>
</odoo>
