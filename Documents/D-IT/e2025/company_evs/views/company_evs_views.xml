<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Company Custom Views -->
    <record id="view_company_form_inherit" model="ir.ui.view">
        <field name="name">res.company.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <group string="Company Identifiers">
                    <field name="company_custom_id" required="1"/>
                    <field name="company_short_code" required="1"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Asset Views -->
    <record id="view_account_asset_form" model="ir.ui.view">
        <field name="name">account.asset.form.inherit</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="asset_unique_code" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!-- Journal Views -->
    <record id="view_account_journal_form" model="ir.ui.view">
        <field name="name">account.journal.form.inherit</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="placeholder">Journal Name</attribute>
            </xpath>
        </field>
    </record>

    <!-- Search Views -->
    <record id="view_company_search" model="ir.ui.view">
        <field name="name">res.company.search</field>
        <field name="model">res.company</field>
        <field name="arch" type="xml">
            <search string="Companies">
                <field name="name"/>
                <field name="company_custom_id"/>
                <field name="company_short_code"/>
            </search>
        </field>
    </record>

    <!-- Tree Views -->
    <record id="view_company_tree" model="ir.ui.view">
        <field name="name">res.company.tree</field>
        <field name="model">res.company</field>
        <field name="arch" type="xml">
            <tree string="Companies">
                <field name="name"/>
                <field name="company_custom_id"/>
                <field name="company_short_code"/>
            </tree>
        </field>
    </record>

    <!-- Asset Tree View -->
    <record id="view_account_asset_tree" model="ir.ui.view">
        <field name="name">account.asset.tree</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="asset_unique_code"/>
            </xpath>
        </field>
    </record>
</odoo>