<odoo>
    <data>
        <template id="job_card_invoice_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <table style="font-size: 13px;" class="table table-borderless">
                                <h4 style="font-weight: bold; margin-top: 0px;">

                                    Invoice
                        <t t-if="o.amount_residual == 0">
                                        <div style="position: absolute; top: 10px; right: 10px;">
                                            <div style="
                                            position: relative;
                                            display: inline-block;
                                            padding: 5px 10px;
                                            font-size: 12px;
                                            color: white;
                                            background-color: #348185;
                                            border-radius: 10px;
                                            clip-path: polygon(100% 0%, 0% 100%, 100% 100%);
                                            text-align: center;
                                            min-width: 80px;
                                            font-weight: bold;
                                            ">
                                                <span>Paid</span>
                                            </div>
                                        </div>
                                    </t>
                                </h4>
                                <tr>
                                    <td style="width: 50%; vertical-align: top;">
                                        <span t-if="inspection.company_id.logo">
                                            <img t-att-src="image_data_uri(inspection.company_id.logo)"
                                                 style="max-width: 150px; max-height: 180px; object-fit: cover;"
                                                 alt="Company Logo"/>
                                        </span>
                                    </td>
                                    <td style="width: 50%; vertical-align: top; text-align: right;">
                                        <span>
                                            <span t-field="inspection.company_id.name"/>
                                            <br/>
                                            <span t-field="inspection.company_id.street"/>
                                            <br/>
                                            <span t-field="inspection.company_id.city"/> &amp; ,
                                            <span t-field="inspection.company_id.zip"/>
                                            <br/>
                                            <span t-field="inspection.company_id.phone"/>
                                            <br/>
                                            Repair Facility #:
                                        </span>
                                    </td>
                                </tr>
                            </table>
                            <table style="margin: 10px 0px 5px 0px; font-size: 13px;" class="table table-borderless">
                                <tr>
                                    <td style="width: 33%;padding:0px;">
                                        <table style="margin: 0px; font-size: 13px;"
                                               class="table table-borderless">
                                            <tr>
                                                <td style="padding: 3px; width: 33%;color: #348185;font-weight: bold;">
                                                    <strong>Bill to</strong>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 3px; width: 33%; vertical-align: middle;">
                                                    <strong>
                                                        <span t-if="inspection.is_partner">
                                                            <span t-field="inspection.partner_id.name"/>
                                                        </span>
                                                        <span t-else="">
                                                            <span t-field="inspection.customer_id.name"/>
                                                        </span>
                                                    </strong>
                                                    <br/>
                                                    <t t-if="inspection.is_partner">
                                                        <span t-esc="inspection.partner_id.street"/>
                                                        <t t-if="inspection.partner_id.street2">
                                                            <br/>
                                                            <span t-esc="inspection.partner_id.street2"
                                                                  t-if="inspection.partner_id.street2"/>
                                                        </t>
                                                    </t>
                                                    <t t-else="">
                                                        <span t-esc="inspection.customer_id.street"/>
                                                        <t t-if="inspection.customer_id.street2">
                                                            <br/>
                                                            <span t-esc="inspection.customer_id.street2"
                                                                  t-if="inspection.customer_id.street2"/>
                                                        </t>
                                                    </t>
                                                    <t t-if="inspection.is_partner">
                                                        <t t-if="inspection.partner_id.city">
                                                            <br/>
                                                            <span t-esc="inspection.partner_id.city"
                                                                  t-if="inspection.partner_id.city"/>
                                                            <t t-if="inspection.partner_id.country_id">
                                                                <span t-field="inspection.partner_id.country_id"
                                                                      t-if="inspection.partner_id.country_id"/>
                                                            </t>
                                                        </t>
                                                    </t>
                                                    <t t-else="">
                                                        <t t-if="inspection.customer_id.city">
                                                            <br/>
                                                            <span t-esc="inspection.customer_id.city"
                                                                  t-if="inspection.customer_id.city"/>
                                                            <t t-if="inspection.customer_id.country_id">
                                                                <span t-field="inspection.customer_id.country_id"
                                                                      t-if="inspection.customer_id.country_id"/>
                                                            </t>
                                                        </t>
                                                    </t>

                                                    <t t-if="inspection.phone">
                                                        <br/>
                                                        <span t-if="inspection.is_partner">
                                                            <span t-field="inspection.partner_id.phone"/>
                                                        </span>
                                                        <span t-else="">
                                                            <span t-field="inspection.customer_id.phone"/>
                                                        </span>

                                                    </t>
                                                    <t t-if="inspection.email">
                                                        <br/>
                                                        <span t-if="inspection.is_partner">
                                                            <span t-field="inspection.partner_id.email"/>
                                                        </span>
                                                        <span t-else="">
                                                            <span t-field="inspection.customer_id.email"/>
                                                        </span>
                                                    </t>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td style="width: 33%;padding:0px;">
                                        <table style="margin: 0px; font-size: 13px;"
                                               class="table table-borderless">
                                            <tr>
                                                <td style="padding: 3px; width: 33%; vertical-align: middle;color: #348185;font-weight: bold;">
                                                    <strong>Vehicle</strong>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 3px; width: 33%; vertical-align: middle;">
                                                    <strong>
                                                        VIN :
                                                        <span t-field="inspection.vin_no"/>
                                                    </strong>
                                                    <br/>
                                                    <span>
                                                        <span t-field="inspection.year"/>
                                                        <span t-field="inspection.vehicle_model_id"/>
                                                        -
                                                        <span t-field="inspection.color"/>
                                                    </span>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td style="width: 33%;padding:0px;">
                                        <table style="margin: 0px; font-size: 13px;"
                                               class="table table-borderless">
                                            <tr>
                                                <td style="padding: 3px; width: 33%; vertical-align: middle;color: #348185;font-weight: bold;">
                                                    <strong>RO info</strong>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 3px; width: 33%; vertical-align: middle;">
                                                    <strong>
                                                        RO # :
                                                        <span t-field="inspection.name"/>
                                                    </strong>
                                                    <br/>
                                                    <span>
                                                        Date :
                                                        <span t-field="inspection.booking_date"/>
                                                        <br/>
                                                        Advisor :
                                                        <span t-field="inspection.service_adviser_id"/>
                                                    </span>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <t t-set="invoice_service"
                               t-value="o.invoice_line_ids.filtered(lambda line: line.product_id.detailed_type == 'service')"/>
                            <t t-set="service_service"
                               t-value="inspection.inspection_required_service_ids.filtered(lambda line: line.product_id and not line.is_additional)"/>
                            <t t-set="matched_service"
                               t-value="service_service.filtered(lambda part: part.product_id.id in invoice_service.mapped('product_id.id'))"/>

                            <t t-if="matched_service">
                                <table class="table table-borderless" style="font-size: 13px;">
                                    <thead>
                                        <tr style="border: 0px;">
                                            <td style="padding: 3px; width: 55%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Service</strong>
                                            </td>
                                            <td style="padding: 3px; text-align: right; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Flag Time</strong>
                                            </td>
                                            <td style="padding: 3px; text-align: right; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Price</strong>
                                            </td>
                                            <td style="padding: 3px; text-align: right; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Total</strong>
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="matched_service" t-as="s">
                                            <tr class="border">
                                                <td style="padding: 6px; width: 55%; vertical-align: middle;"
                                                    class="border">
                                                    <span t-field="s.product_id.name"/>
                                                </td>
                                                <td style="padding: 6px; text-align: right; width: 15%; vertical-align: top;"
                                                    class="border">
                                                    <span>
                                                        <i class="fa fa-clock-o"/>
                                                        <span t-field="matched_service.estimate_time"
                                                              t-options="{'widget':'float_time'}"/>
                                                        hours
                                                    </span>
                                                </td>
                                                <td style="padding: 6px; text-align: right; width: 15%; vertical-align: top;"
                                                    class="border">
                                                    <span t-field="s.price"/>
                                                </td>
                                                <td style="padding: 6px; text-align: right; width: 15%; vertical-align: top;"
                                                    class="border">
                                                    <span t-esc="s.total_amount"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <!-- Additional Services -->
                            <t t-set="invoice_service_additional"
                               t-value="o.invoice_line_ids.filtered(lambda line: line.product_id)"/>
                            <t t-set="service_service_additional"
                               t-value="inspection.inspection_required_service_ids.filtered(lambda line: line.product_id and line.is_additional)"/>
                            <t t-set="matched_service_additional"
                               t-value="service_service_additional.filtered(lambda part: part.product_id.id in invoice_service_additional.mapped('product_id.id'))"/>

                            <t t-if="matched_service_additional">
                                <table class="table table-borderless" style="font-size: 13px;">
                                    <thead>
                                        <tr style="background-color: #f7fbff;">
                                            <td style="padding:0px;width: 100%" colspan="4">
                                                <strong>Additional Service</strong>
                                            </td>
                                        </tr>
                                        <tr style="border: 0px;">
                                            <td style="padding: 3px; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Service</strong>
                                            </td>
                                            <td style="padding: 3px; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Flag Time</strong>
                                            </td>
                                            <td style="padding: 3px; text-align: right; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Price</strong>
                                            </td>

                                            <td style="padding: 3px; text-align: right; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Total</strong>
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <t t-foreach="matched_service_additional" t-as="matched">
                                            <tr>
                                                <td style="padding: 6px; width: 55%; vertical-align: middle;"
                                                    class="border">
                                                    <span t-field="matched.product_id.name"/>
                                                </td>
                                                <td style="padding: 6px; text-align: right; width: 15%; vertical-align: top;"
                                                    class="border">
                                                    <span>
                                                        <i class="fa fa-clock-o"/>
                                                        <span t-field="matched.estimate_time"
                                                              t-options="{'widget':'float_time'}"/>
                                                        hours
                                                    </span>
                                                </td>
                                                <td style="padding: 6px; text-align: right; width: 15%; vertical-align: top;"
                                                    class="border">
                                                    <span t-field="matched.price"/>
                                                </td>
                                                <td style="padding: 6px; text-align: right; width: 15%; vertical-align: top;"
                                                    class="border">
                                                    <span t-esc="matched.total_amount"/>
                                                </td>
                                            </tr>

                                        </t>

                                    </tbody>
                                </table>
                            </t>
                            <t t-set="invoice_parts"
                               t-value="o.invoice_line_ids.filtered(lambda line: line.product_id.detailed_type == 'product')"/>
                            <t t-set="service_parts"
                               t-value="inspection.inspection_required_parts_ids.filtered(lambda line: line.product_id and not line.is_additional)"/>
                            <t t-set="matched_parts"
                               t-value="service_parts.filtered(lambda part: part.product_id.id in invoice_parts.mapped('product_id.id'))"/>
                            <t t-if="matched_parts">
                                <table class="table table-borderless" style="font-size: 13px;">
                                    <thead>
                                        <tr style="background-color: #f7fbff;">
                                            <td style="padding:0px;width: 100%" colspan="4">
                                                <strong>Parts</strong>
                                            </td>
                                        </tr>
                                        <tr style="border: 0px;">
                                            <td style="padding: 3px; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Number</strong>
                                            </td>
                                            <td style="padding: 3px; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Name</strong>
                                            </td>
                                            <td style="padding: 3px; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Qty.</strong>
                                            </td>
                                            <td style="padding: 3px; text-align: right; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Price</strong>
                                            </td>
                                            <td style="padding: 3px; text-align: right; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Discount%</strong>
                                            </td>

                                            <td style="padding: 3px; text-align: right; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Total</strong>
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="matched_parts" t-as="p">
                                            <tr class="border">
                                                <td class="border" style="padding: 3px; width: 20%">
                                                    <span t-field="p.product_id.default_code"/>
                                                </td>
                                                <td style="padding: 6px; width: 55%; vertical-align: middle;"
                                                    class="border">
                                                    <span t-field="p.product_id.name"/>
                                                </td>
                                                <td style="padding: 6px; text-align: right; width: 15%; vertical-align: top;"
                                                    class="border">
                                                    <span t-esc="p.qty"/>
                                                </td>
                                                <td style="padding: 6px; text-align: right; width: 15%; vertical-align: top;"
                                                    class="border">
                                                    <span t-field="p.price"/>
                                                </td>
                                                <td style="padding: 6px; text-align: right; width: 15%; vertical-align: top;"
                                                    class="border">
                                                    <span t-esc="p.discount"/>
                                                </td>
                                                <td style="padding: 6px; text-align: right; width: 15%; vertical-align: top;"
                                                    class="border">
                                                    <span t-esc="p.total_amount"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <!--additional parts table -->
                            <t t-set="invoice_parts_additional"
                               t-value="o.invoice_line_ids.filtered(lambda line: line.product_id)"/>
                            <t t-set="service_parts_additional"
                               t-value="inspection.inspection_required_parts_ids.filtered(lambda line: line.product_id and line.is_additional)"/>
                            <t t-set="matched_parts_additional"
                               t-value="service_parts_additional.filtered(lambda part: part.product_id.id in invoice_parts_additional.mapped('product_id.id'))"/>
                            <t t-if="matched_parts_additional">
                                <table class="table table-borderless" style="font-size: 13px;">
                                    <thead>
                                        <tr style="background-color: #f7fbff;">
                                            <td style="padding:0px;width: 100%" colspan="4">
                                                <strong>Additional Parts</strong>
                                            </td>
                                        </tr>
                                        <tr style="border: 0px;">
                                            <td style="padding: 3px; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Number</strong>
                                            </td>
                                            <td style="padding: 3px; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Name</strong>
                                            </td>
                                            <td style="padding: 3px; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Qty.</strong>
                                            </td>
                                            <td style="padding: 3px; text-align: right; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Price</strong>
                                            </td>
                                            <td style="padding: 3px; text-align: right; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Discount%</strong>
                                            </td>

                                            <td style="padding: 3px; text-align: right; width: 15%; color: #348185; font-weight: bold; border: 0px;">
                                                <strong>Total</strong>
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="matched_parts_additional" t-as="matched">
                                            <tr>

                                                <td class="border" style="padding: 3px; width: 20%">
                                                    <span t-field="matched.product_id.default_code"/>
                                                </td>
                                                <td style="padding: 6px; width: 55%; vertical-align: middle;"
                                                    class="border">
                                                    <span t-field="matched.product_id.name"/>
                                                </td>
                                                <td style="padding: 6px; text-align: right; width: 15%; vertical-align: top;"
                                                    class="border">
                                                    <span t-esc="matched.qty"/>
                                                </td>
                                                <td style="padding: 6px; text-align: right; width: 15%; vertical-align: top;"
                                                    class="border">
                                                    <span t-field="matched.price"/>
                                                </td>
                                                <td style="padding: 6px; text-align: right; width: 15%; vertical-align: top;"
                                                    class="border">
                                                    <span t-esc="matched.discount"/>
                                                </td>
                                                <td style="padding: 6px; text-align: right; width: 15%; vertical-align: top;"
                                                    class="border">
                                                    <span t-esc="matched.total_amount"/>
                                                </td>
                                            </tr>

                                        </t>

                                    </tbody>
                                </table>
                            </t>
                            <div class="row" style="text-align: right;">
                                <div class="col-6">
                                </div>
                                <div class="col-6">
                                    <table class="table table-borderless" style="font-size: 13px;">
                                        <tr>
                                            <td style="padding: 2px;vertical-align: middle;width: 70%">
                                                <strong>Subtotal</strong>
                                            </td>
                                            <td style="padding: 2px; vertical-align: middle; width: 30%;">
                                                <td style="padding: 2px;vertical-align: middle;width: 30%">
                                                    <!-- <span t-esc="sum(line.price_total for line in o.invoice_line_ids if line.product_id.type == 'prodcut')"
                                                          t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" /> -->
                                                    <span t-esc="o.amount_untaxed"/>
                                                </td>

                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 2px;vertical-align: middle;width: 70%">
                                                Parts
                                            </td>
                                            <td style="padding: 2px;vertical-align: middle;width: 30%">
                                                <!-- <span t-field="o.selected_parts_untaxed"/> -->
                                                <td style="padding: 2px; vertical-align: middle; width: 30%;">
                                                    <span t-esc="sum(line.price_total for line in o.invoice_line_ids if line.product_id.detailed_type == 'product')"
                                                          t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                                </td>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 2px;vertical-align: middle;width: 70%">
                                                Labor
                                            </td>
                                            <td style="padding: 2px;vertical-align: middle;width: 30%">
                                                <td style="padding: 2px;vertical-align: middle;width: 30%">
                                                    <!-- <span t-field="o.selected_services_untaxed"/> -->
                                                    <span t-esc="sum(line.price_total for line in o.invoice_line_ids if line.product_id.detailed_type == 'service')"
                                                          t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                                </td>
                                            </td>
                                        </tr>
                                        <!-- <tr>
                                            <td style="padding: 2px;vertical-align: middle;width: 70%">
                                                <strong>Shop Supplies and Environmental Fees</strong>
                                            </td>
                                            <td style="padding: 2px;vertical-align: middle;width: 30%">
                                                <span t-field="o.shop_supplies_fees"/>
                                            </td>
                                        </tr> -->
                                        <tr>
                                            <td style="padding: 2px;vertical-align: middle;width: 70%">
                                                <strong>Sales Tax</strong>
                                            </td>
                                            <td style="padding: 2px;vertical-align: middle;width: 30%">
                                                <td style="padding: 2px;vertical-align: middle;width: 30%">
                                                    <span t-esc="o.amount_tax"/>
                                                </td>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 2px;color: #348185;font-weight: bold;vertical-align: middle;width: 70%">
                                                <strong>Invoice Total</strong>
                                            </td>
                                            <td style="padding: 2px;vertical-align: middle;width: 30%">
                                                <td style="padding: 2px;vertical-align: middle;width: 30%">
                                                    <strong>
                                                        <span t-field="o.amount_total"/>
                                                    </strong>
                                                </td>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="row text-muted" style="text-align: center; margin-top: 5rem;">
                                <div class="col-8">
                                </div>
                                <div class="col-4">
                                    <hr style="margin: 0px;"/>
                                    <br/>
                                    Customer Signature
                                </div>
                            </div>
                            <p style="page-break-before:always;"/>
                            <h6 style="color: #348185;font-weight: bold;">
                                Terms &amp; Conditions
                            </h6>
                            <t t-set="term_conditions"
                               t-value="request.env.ref('tk_vehicle_management.term_condition_1').terms_conditions"/>
                            <div style="font-size: 12px; color: #5e5b5b">
                                <t t-esc="term_conditions"/>
                            </div>


                            <!-- <div class="row" style="text-align: right;">
                                <div class="col-6">
                                </div>
                                <div class="col-6">
                                    
                                </div>
                            </div> -->
                        </div>
                    </t>
                </t>
            </t>
        </template>
        <record id="action_job_card_invoice_qweb_report" model="ir.actions.report">
            <field name="name">Invoice</field>
            <field name="model">vehicle.inspection</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">tk_vehicle_management.job_card_invoice_report_template</field>
            <field name="report_file">tk_vehicle_management.job_card_invoice_report_template</field>
            <field name="binding_model_id" ref="model_vehicle_inspection"/>
            <field name="paperformat_id" ref="inspection_report_paper_format"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>