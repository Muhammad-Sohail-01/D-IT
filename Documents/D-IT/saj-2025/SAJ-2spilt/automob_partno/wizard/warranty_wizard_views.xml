<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_warranty_confirmation_wizard_form" model="ir.ui.view">
        <field name="name">warranty.confirmation.wizard.form</field>
        <field name="model">warranty.confirmation.wizard</field>
        <field name="arch" type="xml">
            <form string="Warranty Confirmation">
                <p style="margin-top: 10px;">
                    <strong>Notice: Warranty will be Registered Under Customers name and not as Partners - ملاحظة: سيتم تسجيل الضمان باسم العميل وليس كشركاء</strong>
                </p>
                <footer>
                    <button string="Yes" name="action_confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" name="action_cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>