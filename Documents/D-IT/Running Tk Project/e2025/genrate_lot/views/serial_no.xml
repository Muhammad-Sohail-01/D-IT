<?xml version="1.0" encoding="utf-8"?>
<!-- stock_delivery_extension/views/stock_picking_views.xml -->
<odoo>
    <data>

        <!-- Inherit the stock picking form view for delivery orders -->
        <record id="view_picking_form_inherit_lot" model="ir.ui.view">
            <field name="name">stock.move.form.inherit.lot</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">


                <xpath expr="//field[@name='lot_ids']" position="attributes">
                    <attribute name="invisible">state != 'done'</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
