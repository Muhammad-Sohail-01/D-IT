<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Stock Move Form View -->
    <record id="view_stock_move_form_inherit_intercompany" model="ir.ui.view">
        <field name="name">stock.move.form.inherit.intercompany</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="is_intercompany_transfer" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Stock Picking Form View -->
    <record id="view_picking_form_inherit_intercompany" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.intercompany</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']/tree" position="inside">
                <field name="is_intercompany_transfer"/>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/tree//field[@name='product_id']" position="after">
                <button name="%(action_serial_number_selection)d"
                        type="action"
                        string="Select Serial Numbers"
                        class="btn-link"/>
            </xpath>
        </field>
    </record>

    <!-- Available Serial Numbers List View -->
    <record id="view_available_serial_numbers_tree" model="ir.ui.view">
        <field name="name">available.serial.numbers.tree</field>
        <field name="model">available.serial.numbers</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id"/>
                <field name="serial_number"/>
                <field name="source_company_id"/>
                <field name="is_available"/>
                <field name="lot_id"/>
            </tree>
        </field>
    </record>

    <!-- Available Serial Numbers Form View -->
    <record id="view_available_serial_numbers_form" model="ir.ui.view">
        <field name="name">available.serial.numbers.form</field>
        <field name="model">available.serial.numbers</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="serial_number"/>
                        </group>
                        <group>
                            <field name="source_company_id"/>
                            <field name="is_available"/>
                            <field name="lot_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Available Serial Numbers Search View -->
    <record id="view_available_serial_numbers_search" model="ir.ui.view">
        <field name="name">available.serial.numbers.search</field>
        <field name="model">available.serial.numbers</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_id"/>
                <field name="serial_number"/>
                <field name="source_company_id"/>
                <filter string="Available" name="available" domain="[('is_available', '=', True)]"/>
                <filter string="Not Available" name="not_available" domain="[('is_available', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Product" name="group_by_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Source Company" name="group_by_company" context="{'group_by': 'source_company_id'}"/>
                    <filter string="Availability" name="group_by_available" context="{'group_by': 'is_available'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Available Serial Numbers -->
    <record id="action_available_serial_numbers" model="ir.actions.act_window">
        <field name="name">Available Serial Numbers</field>
        <field name="res_model">available.serial.numbers</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available': 1}</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_available_serial_numbers"
              name="Available Serial Numbers"
              parent="stock.menu_stock_inventory_control"
              action="action_available_serial_numbers"
              sequence="100"/>
</odoo>