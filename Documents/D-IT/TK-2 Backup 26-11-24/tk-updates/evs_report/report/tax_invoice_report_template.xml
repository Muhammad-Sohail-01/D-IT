<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>
       <template id="tax_invoice_report_header">
            <header>
                <table border="0" cellspacing="0" cellpadding="0" style="width:100%;">
                    <tbody>
                        <tr>
                            <td style="text-align:center;width:33.33%">
                                <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)"
                                 style="max-height: 100px; max-width: 400px;" alt="Logo"/>
                            </td>
                            <td style="text-align:center; font-size:15px;width:33.33%">
                                <div style="text-align: center; width:100%; position: relative; color: #8B0000;">
                                    <br/><br/><br/>
                                    <h2>Tax Invoice</h2>
                                </div>
                            </td>
                            <td style="text-align:right;width:33.33%">
                                <img t-if="o.car_make.image_128" t-att-src="image_data_uri(o.car_make.image_128)"
                                 style="max-height: 100px; max-width: 400px;" alt="Logo"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </header>
            <t t-raw="0"/>
       </template>
       <template id="report_invoice_document" inherit_id="account.report_invoice_document">
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">
                <t t-call="evs_report.tax_invoice_report_header">
                    <br/>
                    <div class="page">

                        <table class="table table-sm o_main_table" style="border-top: 6px solid red; border-bottom: 6px solid red; width: 100%;">
                            <thead>
                                <tr>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt; border: 1px solid black; padding: 8px; width:13%;">
                                        <b>Name</b>
                                    </td>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt;border: 1px solid black; display: block; height:25px; width:21%; margin-right: 15px; padding: 8px;">
                                        <span t-field="o.partner_id.name"/>
                                    </td>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt;border: 1px solid black; padding: 8px; width:13%;">
                                        <b>Date</b>
                                    </td>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt; border: 1px solid black; display: block; height:25px; width:21%; margin-right: 15px; padding: 8px;">
                                        <span t-field="o.invoice_date"/>
                                    </td>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt; border: 1px solid black; padding: 8px; width:13%;">
                                        <b>Model</b>
                                    </td>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt; border: 1px solid black; padding: 8px; height:25px; width:21%;">
                                        <span t-field="o.car_model.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt;border: 1px solid black; padding: 8px;">
                                        <b>Mobile</b>
                                    </td>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt;border: 1px solid black; display: block; margin-right: 15px; padding: 8px; height:25px;">
                                        <span t-field="o.partner_id.phone"/>
                                    </td>
                                    <td style="padding: 8px;"/>
                                    <td style="display: block; margin-right: 15px; padding: 8px;"/>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt; border: 1px solid black; padding: 8px;">
                                        <b>Plate</b>
                                    </td>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt; border: 1px solid black; padding: 8px; height:25px;">
                                        <span t-field="o.car_history_id.plate_number"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt;border: 1px solid black; padding: 8px;">
                                        <b>Advisor</b>
                                    </td>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt;border: 1px solid black; display: block; margin-right: 15px; padding: 8px; height:25px;">
                                        <span t-field="o.user_id.name"/>
                                    </td>
                                    <td style="padding: 8px;"/>
                                    <td style="display: block; margin-right: 15px; padding: 8px;"/>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt;border: 1px solid black; padding: 8px;">
                                        <b>Year</b>
                                    </td>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt; border: 1px solid black; padding: 8px; height:25px;">
                                        <span t-field="o.year"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt;border: 1px solid black; padding: 8px; height:25px;">
                                        <b>Invoice No.</b>
                                    </td>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt;border: 1px solid black; display: block; margin-right: 15px; padding: 8px; height:25px;">
                                        <span t-field="o.name"/>
                                    </td>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt;border: 1px solid black; padding: 8px; height:25px;">
                                        <b>VIN</b>
                                    </td>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt;border: 1px solid black; display: block; height:25px; margin-right: 15px; padding: 8px;">
                                        <span t-field="o.car_history_id.vin_number"/>
                                    </td>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt;border: 1px solid black; padding: 8px; height:25px;">
                                        <b>ODO</b>
                                    </td>
                                    <td style="font-family: Minion Pro; font-size: 9.57pt;border: 1px solid black; padding: 8px; height:25px;">
                                        <span t-field="o.current_mileage"/>
                                    </td>
                                </tr>
                            </thead>
                        </table>
                        <br/>
                        <br/>
                        <table width="100%" style="font-family: Minion Pro; font-size: 9.57pt;">
                            <thead style="display: table-row-group">
                                <tr>
                                    <th width="55%">ITEM</th>
                                    <th width="10%" align="right">QTY</th>
                                    <th width="10%" align="right">U. PRICE</th>
                                    <th width="10%" align="right">VAT</th>
                                    <th width="15%" align="right">AMOUNT+VAT</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                                <t t-foreach="lines" t-as="line">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    <tr>
                                        <t t-if="line.display_type == 'product'">
                                            <td>
                                                <span t-field="line.name"/>
                                            </td>
                                            <td align="right">
                                                <span t-field="line.quantity"/>
                                            </td>
                                            <td align="right">
                                                <span t-esc="'{:,.2f}'.format(line.price_unit)"/>
                                            </td>
                                            <td align="right">
                                                <t t-if="line.tax_ids">
                                                    <span t-esc="'{:,.2f}'.format(line.price_total - line.price_subtotal)"/>
                                                </t>
                                            </td>
                                            <td name="td_subtotal" class="text-right o_price_total" align="right">
                                                <span t-esc="'{:,.2f}'.format(line.price_total)"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td name="td_section_line" colspan="5" style="background-color:#CCCCCC;">
                                                <strong><span t-field="line.name"/></strong>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>

                                        <t t-if="line.display_type == 'line_note'" style="background-color:#CCCCCC;">
                                            <td name="td_note_line" colspan="5">
                                                <strong><span t-field="line.name"/></strong>
                                            </td>
                                        </t>
                                    </tr>
                                    <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal" style="text-align:right;">
                                            <td name="td_section_subtotal" colspan="5">
                                                <strong class="mr16">Subtotal: </strong>
                                                <span t-esc="'{:,.2f}'.format(current_subtotal)"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                           </tbody>
                        </table>
                        <div class="d-block" style="margin-top: 10px; border-top: 6px solid red;width:920px;"/>
                            <div class="d-inline-block" style="float: left; margin-top: 15px;font-family: Minion Pro; font-size: 9.57pt;">
                                <strong>Customer Signature:</strong>
                            </div>
                            <div class="d-inline-block" style="float: right;">
                                <table style="font-family: Minion Pro; font-size: 9.57pt;">
                                    <tbody>
                                        <tr>
                                           <td style="padding-right: 20px;">
                                              <strong>Sub Total</strong>
                                           </td>
                                           <td align="right">
                                              <span t-esc="'%.2f'% o.amount_untaxed"/>
                                           </td>
                                        </tr>
                                        <tr>
                                           <td style="padding-right: 20px;">
                                              <strong>Value Added Tax (VAT)</strong>
                                           </td>
                                           <td align="right">
                                              <span t-esc="'%.2f'% o.amount_tax"/>
                                           </td>
                                        </tr>
                                        <tr>
                                           <td style="padding-right: 20px;">
                                              <strong>Total</strong>
                                           </td>
                                           <td align="right">
                                              <span t-esc="'%.2f'% o.amount_total"/>
                                           </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        <br/><br/>
                        <div style="margin-top: 25px; font-family: Minion Pro; font-size: 9.57pt;">
                           <strong>Terms and Conditions:</strong>
                           <p>1. Estimate charges of minimum Dhs.300/- or more will be charged if job estimated and not repaired.</p>
                           <p>2. Free Pick Up and Delivery is also subject to approval.</p>
                           <p>3. If the car is not collected within 7 days after inspection or repair, a parking fee of AED 50/- per day will be charged</p>
                        </div>
                    </div>
                    <div class="footer">
                        <div class="text-center">
                            <img src='/evs_report/static/img/Footer.jpg' style="max-height: 130px; max-width: 950px;"/>
                        </div>
                    </div>
                </t>
            </xpath>
       </template>
       <template id="report_invoice" inherit_id="account.report_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-call="evs_report.report_invoice_document" t-lang="lang"/>
                </t>
            </t>
        </template>

   </data>
</odoo>
