<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="service_concern_view_form" model="ir.ui.view">
            <field name="name">service.concern.view.form</field>
            <field name="model">service.concern</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="service_id" invisible="1"/>
                            <field name="concern"/>
                            <field name="cause"/>
                            <field name="correction"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Update" type="object" class="btn btn-outline-success"
                                name="update_service_concern" icon="fa-bookmark"/>
                        <button string="Cancel" special="cancel" class="btn btn-outline-danger" icon="fa-window-close"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="service_concern_action" model="ir.actions.act_window">
            <field name="name">Service Concern</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">service.concern</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>