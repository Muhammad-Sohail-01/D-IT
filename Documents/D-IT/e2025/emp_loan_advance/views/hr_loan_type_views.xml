<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Loan Type Form View -->
    <record id="view_hr_loan_type_form" model="ir.ui.view">
        <field name="name">hr.loan.type.form</field>
        <field name="model">hr.loan.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. Personal Loan"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="max_amount"/>
                            <field name="currency_id" options="{'no_create': True, 'no_open': True}"/>
                        </group>
<!--                        <group>-->
<!--                            <field name="max_installments"/>-->
<!--                            <field name="interest_rate" widget="percentage"/>-->
<!--                            <field name="interest_type"/>-->
<!--                        </group>-->
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Enter loan type description and terms..."/>
                        </page>
                        <page string="Requirements" name="requirements">
                            <field name="requirement_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="required"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Eligibility Rules" name="eligibility">
                            <group>
                                <group>
                                    <field name="min_employment_months"/>
                                    <field name="max_active_loans"/>
                                </group>
                                <group>
                                    <field name="minimum_salary"/>
                                    <field name="salary_deduction_limit" widget="percentage"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!-- Add chatter for tracking changes -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Loan Type Tree View -->
    <record id="view_hr_loan_type_tree" model="ir.ui.view">
        <field name="name">hr.loan.type.tree</field>
        <field name="model">hr.loan.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="max_amount"/>
                <field name="currency_id" optional="show"/>
                <field name="max_installments"/>
<!--                <field name="interest_rate" widget="percentage"/>-->
                <field name="min_employment_months" optional="hide"/>
                <field name="max_active_loans" optional="hide"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Loan Type Search View -->
    <record id="view_hr_loan_type_search" model="ir.ui.view">
        <field name="name">hr.loan.type.search</field>
        <field name="model">hr.loan.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="currency_id"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Currency" name="currency" context="{'group_by': 'currency_id'}"/>
<!--                    <filter string="Interest Type" name="interest_type" context="{'group_by': 'interest_type'}"/>-->
                </group>
            </search>
        </field>
    </record>

    <!-- Loan Type Kanban View -->
    <record id="view_hr_loan_type_kanban" model="ir.ui.view">
        <field name="name">hr.loan.type.kanban</field>
        <field name="model">hr.loan.type</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="max_amount"/>
                <field name="currency_id"/>
                <field name="max_installments"/>
<!--                <field name="interest_rate"/>-->
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="max_amount" widget="monetary"/>
                                    <field name="currency_id" options="{'no_create': True}" groups="base.group_multi_currency"/>
                                </div>
                                <div>
                                    <span>Max Installments: </span>
                                    <field name="max_installments"/>
                                </div>
<!--                                <div>-->
<!--                                    <span>Interest Rate: </span>-->
<!--                                    <field name="interest_rate" widget="percentage"/>-->
<!--                                </div>-->
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action Window for Loan Types -->
    <record id="action_hr_loan_type" model="ir.actions.act_window">
        <field name="name">Loan Types</field>
        <field name="res_model">hr.loan.type</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_hr_loan_type_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first loan type!
            </p>
            <p>
                Define different types of loans that can be requested by employees.
                You can set maximum amounts, installment limits.
            </p>
        </field>
    </record>
</odoo>