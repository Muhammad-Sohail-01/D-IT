<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_code_form" model="ir.ui.view">
        <field name="name">account.asset.form.inherit</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">

                <field name="comp_alpha" invisible="1"/>


            </xpath>
        </field>
    </record>


    <record id="view_account_code_tree" model="ir.ui.view">
        <field name="name">account.account.tree.inherit</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='method_period']" position="after">

                <field name="comp_alpha" optional="hide"/>


            </xpath>
        </field>
    </record>
</odoo>