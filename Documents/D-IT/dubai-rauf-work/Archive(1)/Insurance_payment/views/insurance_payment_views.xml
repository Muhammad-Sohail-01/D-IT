<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
         <field name="arch" type="xml">
         <xpath expr="//form//header//button[@name='action_cancel']" position="before">
                <button name="create_insurance_journal_entry" class="btn-primary" string="Ins JV" type="object"
                invisible="insurance_journal_entry_id"/>
         </xpath>
         <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="insurance_invoice" widget="boolean_toggle"/>
         </xpath>
         <xpath expr="//form/sheet/notebook/page[@name='customer_signature']" position="after">
                 <page string="Insurance Details" name="insurance_payment_details" invisible="insurance_invoice == False">
                     <group>
                         <group>
<!--                            <field name="insurance_invoice"/>-->
                            <field name="insurance_company"/>
                            <field name="policy_no"/>
                            <field name="amount_nature"/>
                            <field name="receivable_amount" readonly="1"/>
                            <field name="receivable_insurance_fix" invisible="amount_nature != 'fixed'"/>
                            <field name="insurance_amount_percentage" invisible="amount_nature != 'percentage'"/>
                         </group>
                         <group>
                            <field name="insurance_journal" readonly="1"/>
                            <field name="insurance_journal_date" readonly="1"/>
                            <field name="insurance_journal_entry_id" readonly="1"/>
                         </group>
                    </group>
              </page>
            </xpath>
        </field>
    </record>
</odoo>