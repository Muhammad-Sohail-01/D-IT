<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_hr_contract_form_inherit_total_salary" model="ir.ui.view">
            <field name="name">hr.contract.form.inherit.total.salary</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='salary_info']" position="after">
                  
                    <div class="o_row mw-50">
                        <label for="total_salary_month"/>
                        <field name="total_salary_month"/>                  
                    </div>
                  
                </xpath>
            </field>
        </record>
    </data>
</odoo>