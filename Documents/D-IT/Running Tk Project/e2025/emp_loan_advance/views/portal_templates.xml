<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_loan" name="Portal My Home : loan entries" inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="loan_count" t-call="portal.portal_docs_entry">
                <t t-set="title">Loans</t>
                <t t-set="url" t-value="'/my/loans'"/>
                <t t-set="count" t-value="loan_count"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_loans" name="My Loans">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Loans</t>
            </t>
            <t t-if="not loans">
                <div class="alert alert-warning mt8" role="alert">
                    There are no loans.
                </div>
            </t>
            <t t-if="loans" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Reference</th>
                        <th>Request Date</th>
                        <th>Amount</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="loans" t-as="loan">
                        <tr>
                            <td>
                                <a t-attf-href="/my/loans/#{loan.id}">
                                    <t t-esc="loan.name"/>
                                </a>
                            </td>
                            <td><span t-field="loan.date_request"/></td>
                            <td><span t-field="loan.loan_amount"/></td>
                            <td><span t-field="loan.state"/></td>
                        </tr>
                    </t>
                </tbody>
            </t>
        </t>
    </template>

    <template id="portal_my_loan" name="My Loan">
        <t t-call="portal.portal_layout">
            <t t-set="o_portal_fullwidth_alert" groups="hr_loan.group_loan_user">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#model=hr.loan&amp;id=%s&amp;view_type=form' % (loan.id)"/>
                </t>
            </t>

            <div class="row mt16">
                <div class="col-lg-12">
                    <h4>Loan Request</h4>
                </div>
            </div>
            <div class="row mt16">
                <div class="col-lg-6">
                    <div class="row">
                        <label class="col-lg-4">Reference</label>
                        <div class="col-lg-8">
                            <span t-field="loan.name"/>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-lg-4">Request Date</label>
                        <div class="col-lg-8">
                            <span t-field="loan.date_request"/>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="row">
                        <label class="col-lg-4">Amount</label>
                        <div class="col-lg-8">
                            <span t-field="loan.loan_amount"/>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-lg-4">Status</label>
                        <div class="col-lg-8">
                            <span t-field="loan.state"/>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>