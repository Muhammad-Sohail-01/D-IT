<odoo>
    <!-- Inherit the stock.picking form view to add part_number_id in the stock.move line items -->
    <record id="view_stock_picking_form_inherit_part_number" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.part.number</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Locate the -->
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="part_number_id" string="Part Number"/>
                <field name="part_internal_number"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <field name="cost_price" force_save="1"/>
                <field name ="sale_price" force_save="1"/>
                
                
            </xpath>
        </field>
    </record>

    <!-- Inherit the stock.move tree view to add part_number_id for list views -->
    <record id="view_stock_move_tree_inherit_part_number" model="ir.ui.view">
        <field name="name">stock.move.tree.inherit.part.number</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree"/>
        <field name="arch" type="xml">
            <!-- Add the part_number_id field next to product_id in the tree view -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="part_number_id" string="Part Number new"/>
            </xpath>
        </field>
    </record>
</odoo>
