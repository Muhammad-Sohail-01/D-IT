<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="invoice_job_card_inspection_view_form" model="ir.ui.view">
            <field name="name">invoice.job.card.inspection.view.form</field>
            <field name="model">vehicle.invoice</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="inspection_id" invisible="1"/>
                        <label for="invoice_id"/>
                        <div>
                            <div class="font-italic text-muted">
                                Select the Invoice you want to print
                            </div>
                            <field name="invoice_id" domain="[('job_card_id', '=', inspection_id)]"/>

                            
                        </div>
                        <!-- <label for="is_return_part"/> -->
                        <div>
                            <!-- <field name="is_return_part"/>
                            <div class="font-italic text-muted" invisible="not is_return_part">
                                If the part delivery order is completed, a return delivery part order will be created.
                            </div> -->
                        </div>
                    </group>
                    <footer>
                        <button string="Print Invoice" type="object" class="btn btn-outline-success me-1 ms-1"
                                name="print_invoice" icon="fa-times-circle"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="invoice_job_card_action" model="ir.actions.act_window">
            <field name="name">Print Invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vehicle.invoice</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>