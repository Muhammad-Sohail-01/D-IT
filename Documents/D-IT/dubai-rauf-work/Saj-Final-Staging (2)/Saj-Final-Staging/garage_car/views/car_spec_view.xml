<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='car_spec_view_form' model='ir.ui.view'>
        <field name="name">car.spec.form</field>
        <field name="model">car.spec</field>
        <field name="arch" type="xml">
            <form string="Car Spec">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='car_spec_view_tree' model='ir.ui.view'>
        <field name="name">car.spec.tree</field>
        <field name="model">car.spec</field>
        <field name="arch" type="xml">
            <tree string="Car Spec">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id='car_spec_view_action' model='ir.actions.act_window'>
        <field name="name">Car Spec</field>
        <field name="res_model">car.spec</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new car spec.
          </p><p>
            You can define several Car Spec. (e.g. US).
          </p>
        </field>
    </record>

    <menuitem action="car_spec_view_action" parent="car_configuration" name="Car Spec" id="car_spec_menu" sequence="5"/>

</odoo>
