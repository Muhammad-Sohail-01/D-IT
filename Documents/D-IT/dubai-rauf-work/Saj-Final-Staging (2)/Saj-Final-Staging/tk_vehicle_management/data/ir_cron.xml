<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="vehicle_warranty_expire" model="ir.cron">
            <field name="name">Vehicle Management: Vehicle Warranty Expire</field>
            <field name="model_id" ref="tk_vehicle_management.model_vehicle_warranty"/>
            <field name="state" eval="'code'"/>
            <field name="code" eval="'model.expire_vehicle_warranty()'"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="True"/>
        </record>
