<odoo>
    <record id="view_res_users_form_inherit_discount" model="ir.ui.view">
        <field name="name">res.users.form.inherit.discount</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences']/group" position="after">
                <group string="Discount User Control">
                    <field name="allow_discount"/>
                    <field name="max_discount"/>
                    <field name="approve_discount"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
