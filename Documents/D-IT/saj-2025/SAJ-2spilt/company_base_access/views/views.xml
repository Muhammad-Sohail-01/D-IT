<odoo>
  <data>
    <!-- Product Template View -->
        <record id="view_product_template_form_inherit_ext" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']//field[@name='company_id']" position="after">
                    <field name="company_group_ids" widget="many2many_tags"/>
                    <field name="allowed_company_ids" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>
  <!-- Company Group Views -->
        <record id="view_company_group_form" model="ir.ui.view">
            <field name="name">company.group.form</field>
            <field name="model">company.group</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="company_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_company_group_tree" model="ir.ui.view">
            <field name="name">company.group.tree</field>
            <field name="model">company.group</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_company_group" model="ir.actions.act_window">
            <field name="name">Company Groups</field>
            <field name="res_model">company.group</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_company_group"
                  name="Company Groups"
                  action="action_company_group"
                  parent="base.menu_administration"
                  sequence="100"/>
  </data>
</odoo>
