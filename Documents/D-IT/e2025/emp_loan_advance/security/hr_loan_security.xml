<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Security Groups -->
        <record id="group_loan_user" model="res.groups">
            <field name="name">Loan User</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

            <record id="group_loan_manager" model="res.groups">
            <field name="name">Loan Manager</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('group_loan_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_loan_admin" model="res.groups">
            <field name="name">Loan Administrator</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('group_loan_manager'))]"/>
        </record>
    </data>

    <data noupdate="1">
        <!-- Record Rules -->
        <record id="rule_loan_employee" model="ir.rule">
            <field name="name">Employee Own Loan</field>
            <field name="model_id" ref="model_hr_loan"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_loan_user'))]"/>
        </record>

        <record id="rule_loan_manager" model="ir.rule">
            <field name="name">Manager Department Loans</field>
            <field name="model_id" ref="model_hr_loan"/>
            <field name="domain_force">['|', ('department_id.manager_id.user_id', '=', user.id),
                                          ('employee_id.parent_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_loan_manager'))]"/>
        </record>
    </data>
</odoo>