<odoo>
    <record id="view_sale_order_form_inherit_discount" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.discount</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//header//button[@name='action_cancel']" position="after">
                <button name="action_approve_discount"
                        string="Approve Discount"
                        type="object"
                        class="oe_highlight"
                        invisible="'approval_required', '=', False"/>
            </xpath>
        </field>
    </record>
</odoo>
