<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_salary_distribution_report_tree" model="ir.ui.view">
        <field name="name">hr.salary.distribution.report.tree</field>
        <field name="model">hr.salary.distribution</field>
        <field name="arch" type="xml">
            <tree string="Salary Distribution Report" create="false" edit="false" delete="false">
                <field name="payslip_id"/>
                <field name="employee_id"/>
                <field name="payslip_company_id" string="Payslip Company"/>
                <field name="company_id" string="Distributed Company"/>
                <field name="salary_portion" sum="Total"/>
                <field name="percentage"/>
                <field name="work_days" sum="Total"/>
            </tree>
        </field>
    </record>

    <record id="view_salary_distribution_report_search" model="ir.ui.view">
        <field name="name">hr.salary.distribution.report.search</field>
        <field name="model">hr.salary.distribution</field>
        <field name="arch" type="xml">
            <search string="Salary Distribution Search">
                <field name="payslip_id"/>
                <field name="employee_id"/>
                <field name="payslip_company_id"/>
                <field name="company_id"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Payslip Company" name="group_by_payslip_company"
                            context="{'group_by': 'payslip_company_id'}"/>
                    <filter string="Distributed Company" name="group_by_company"
                            context="{'group_by': 'company_id'}"/>
                    <filter string="Employee" name="group_by_employee"
                            context="{'group_by': 'employee_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_salary_distribution_report" model="ir.actions.act_window">
        <field name="name">Salary Distribution Report</field>
        <field name="res_model">hr.salary.distribution</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="view_salary_distribution_report_search"/>
    </record>

    <menuitem id="menu_salary_distribution_report"
              name="Salary Distribution Report"
              parent="hr_work_entry_contract_enterprise.menu_hr_payroll_root"
              action="action_salary_distribution_report"
              sequence="74"/>
</odoo>

