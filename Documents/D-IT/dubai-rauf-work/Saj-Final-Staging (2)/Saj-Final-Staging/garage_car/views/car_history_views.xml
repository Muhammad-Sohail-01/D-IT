<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id='car_history_view_form' model='ir.ui.view'>
        <field name="name">car.history.form</field>
        <field name="model">car.history</field>
        <field name="arch" type="xml">
            <form string="Reg Vehicles">
                <header>
                       <button name="create_inspection" type="object"
                           string="Create Inspection" class="oe_highlight"/>
                       <button name="create_estimation" type="object"
                           string="Create Estimation" class="oe_highlight"/>
                       <button name="create_invoice" type="object"
                          string="Create Invoice" class="oe_highlight"/>
                </header>
                <sheet>
                    <field name="image_128" widget='image' class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="phone"/>
                            <field name="car_brand_id"/>
                            <field name="car_model_id" domain="[('brand_id', '=', car_brand_id)]"/>

                            <field name="year"/>
                            <field name="plate_number"/>
                            <field name="vin_number"/>
                            <field name="engine_cc"/>
                        </group>
                        <group>
                            <field name="door"/>
                            <field name="gear_type_id"/>
                            <field name="gear_box_id"/>
                            <field name="color_id"/>
                            <field name="cylinder_id"/>
                            <field name="spec_id"/>
                            <field name="social_reference_id"/>
                            <field name="fuel_type"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="License">
                            <field name="licence_image_front" widget="image" class="oe_avatar"
                                   options="{'size': [450, 280]} {'zoom': true, 'preview_image':'avatar_128'}"/>
                            <field name="licence_image_back" widget="image" class="oe_avatar"
                                   options="{'size': [450, 255]}"/>

                            <group>


                                <group>
                                    <field name="licence_provider"/>
                                    <field name="licence_number"/>
                                    <field name="licence_expire"/>
                                </group>
                            </group>
                        </page>
                        <page string="Insurance">
                            <group>
                                <group>
                                    <field name="insurance_provider"/>
                                    <field name="insurance_number"/>
                                    <field name="insurance_expire"/>
                                    <field name="insurance_type"/>
                                </group>

                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id='car_history_view_tree' model='ir.ui.view'>
        <field name="name">car.history.tree</field>
        <field name="model">car.history</field>
        <field name="arch" type="xml">
            <tree string="Service Car">
                <field name="name"/>
                <field name="car_brand_id"/>
                <field name="car_model_id"/>
                <field name="partner_id"/>
                <field name="phone"/>
                <field name="year"/>
                <field name="plate_number"/>
                <field name="vin_number"/>
                <field name="door"/>
                <field name="gear_type_id"/>
                <field name="gear_box_id"/>
                <field name="color_id"/>
                <field name="spec_id"/>
                <field name="engine_cc"/>
            </tree>
        </field>
    </record>

    <record id='car_history_view_search' model='ir.ui.view'>
        <field name="name">car.history.search</field>
        <field name="model">car.history</field>
        <field name="arch" type="xml">
            <search string="Reg Vehicles">
                <field name="car_brand_id"/>
                <field name="car_model_id"/>
                <field name="partner_id"/>
                <group expand="1" string="Group By">
                    <filter name="groupby_brand" context="{'group_by' : 'car_brand_id'}" string="Brand"/>
                    <filter name="groupby_model" context="{'group_by' : 'car_model_id'}" string="Model"/>
                    <filter name="groupby_partner" context="{'group_by' : 'partner_id'}" string="Customer"/>
                </group>
            </search>
        </field>
    </record>

    <record id='car_history_action' model='ir.actions.act_window'>
        <field name="name">Reg Vehicles</field>
        <field name="res_model">car.history</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_groupby_car_brand_id" : True,}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new car history
          </p><p>
            You can define several models (e.g. A3, A4) for each make (Audi).
          </p>
        </field>
    </record>

    <menuitem name="Reg Vehicles"
            action="car_history_action"
            parent="garage_car.menu_root"
            id="car_history" sequence="1"
            groups="car_garage_group_manager"/>

</odoo>

