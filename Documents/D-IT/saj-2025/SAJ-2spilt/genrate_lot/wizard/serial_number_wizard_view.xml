<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_serial_number_selection_wizard_form" model="ir.ui.view">
        <field name="name">serial.number.selection.wizard.form</field>
        <field name="model">serial.number.selection.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Serial Numbers">
                <sheet>
                    <group>
                        <field name="product_id" readonly="1"/>
                        <field name="source_company_id" readonly="1"/>
                        <field name="quantity_needed"/>
                    </group>
                    <notebook>
                        <page string="Available Serial Numbers">
                            <field name="available_lot_ids" widget="many2many">
                                <tree>
                                    <field name="name" string="Serial Number"/>
                                    <field name="product_id"/>
                                    <field name="company_id"/>
                                    <field name="create_date"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Selected Serial Numbers">
                            <field name="selected_lot_ids">
                                <tree editable="bottom">
                                    <field name="name" string="Serial Number"/>
                                    <field name="product_id"/>
                                    <field name="company_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_confirm_selection"
                            string="Confirm"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Window Action for Serial Number Selection -->
    <record id="action_serial_number_selection" model="ir.actions.act_window">
        <field name="name">Select Serial Numbers</field>
        <field name="res_model">serial.number.selection.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="stock.model_stock_move"/>
    </record>
</odoo>