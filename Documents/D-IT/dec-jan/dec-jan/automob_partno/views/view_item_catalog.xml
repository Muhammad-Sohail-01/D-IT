<odoo>
    <data>

        <record model="ir.ui.view" id="view_item_catalog_tree">
            <field name="name">item.catalog.tree.view</field>
            <field name="model">item.catalog</field>
            <field name="arch" type="xml">
                <tree string="Catalog Tree" editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_item_catalog_form">
            <field name="name">item.catalog.form.view</field>
            <field name="model">item.catalog</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id='catalog_view_action' model='ir.actions.act_window'>
            <field name="name">Item Catalog</field>
            <field name="res_model">item.catalog</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new work location
                </p>
            </field>
        </record>

        <menuitem id="item_catalog_menu"
                  name="Catalog Category"
                  parent="stock.menu_product_in_config_stock"
                  action="catalog_view_action"/>

    </data>
</odoo>
