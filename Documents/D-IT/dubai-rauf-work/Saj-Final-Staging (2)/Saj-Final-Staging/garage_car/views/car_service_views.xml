<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='car_service_type_view_form' model='ir.ui.view'>
        <field name="name">car.service.type.form</field>
        <field name="model">car.service.type</field>
        <field name="arch" type="xml">
            <form string="Car Service">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='car_service_type_view_tree' model='ir.ui.view'>
        <field name="name">car.service.type.tree</field>
        <field name="model">car.service.type</field>
        <field name="arch" type="xml">
            <tree string="Models">
                <field name="name"/>
            </tree>
        </field>
    </record>
    
    <record id='car_service_type_view_action' model='ir.actions.act_window'>
        <field name="name">Car Service Type</field>
        <field name="res_model">car.service.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new car service type
          </p><p>
            You can define several services (e.g. repair, watching).
          </p>
        </field>
    </record>
    
    <menuitem action="car_service_type_view_action" parent="car_configuration" name="Car Service" id="car_service_type_menu" sequence="3"/>
    
</odoo>
