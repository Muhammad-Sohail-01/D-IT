<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_evs_inherit" model="ir.ui.view">
        <field name="name">account.move.form.evs.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add after partner_id -->
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="register_vehicle_id" options="{'no_create': True, 'no_open': True}" readonly="1"/>
            </xpath>

            <xpath expr="//group[1]" position="after">
                <group string="Vehicle Details">
                    <group>
                        <field name="brand_id"/>
                        <field name="vehicle_model_id"/>
                        <field name="vin_no"/>
                    </group>
                    <group>
                        <field name="registration_no"/>
                        <field name="year"/>
                        <field name="color"/>
                    </group>
                </group>
            </xpath>

            <!-- Add service advisor -->
            <xpath expr="//field[@name='invoice_user_id']" position="after">
                <field name="service_advisor_id"/>
            </xpath>

            <!-- Modify invoice lines -->
             <xpath expr="//page[@name='invoice_tab']//tree//field[@name='product_id']" position="after">
                <field name="part_internal_no" optional="show"/>
                <field name="part_nubmer_id" optional="show"/>
                <field name="estimate_time" optional="show" widget="float_time"/>
                <field name="warranty_applicable" optional="show"/>
                <field name="warranty_expiry_date" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Add search view inheritance -->
    <record id="view_account_move_filter_evs_inherit" model="ir.ui.view">
        <field name="name">account.move.select.evs.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="job_card_idd"/>
                <field name="vin_no"/>
                <field name="registration_no"/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="Job Card" name="group_by_job_card" context="{'group_by': 'job_card_idd'}"/>
                <filter string="Vehicle" name="group_by_vehicle" context="{'group_by': 'register_vehicle_id'}"/>
                <filter string="Brand" name="group_by_brand" context="{'group_by': 'brand_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>